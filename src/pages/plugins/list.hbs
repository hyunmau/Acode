{{#.}}
<div class="list-item" action="open" {{#installed}}data-installed="true"{{/installed}} data-plugin="{{plugin}}">
  <span 
    class="icon" 
    style="background-image: url({{#icon}}{{icon}}{{/icon}}{{^icon}}./res/puzzle.png{{/icon}});"
  ></span>
  <div class="container">
    <div class="text" style="justify-content: space-between;">{{name}}</div>
    <small class="value" style="width: fit-content;">
      {{#author}}<a href="https://github.com/{{github}}" class="text link">{{name}}</a>{{/author}}
    </small>
  </div>
</div>
{{/.}}